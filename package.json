{
  "name": "simple-storage",
  "version": "0.1.0",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "hono deploy",
    "db:generate": "drizzle-kit generate:pg --schema ./src/db/schema.ts --out=./src/db/migrations",
    "db:migrate": "tsx ./src/db/migrate.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@neondatabase/serverless": "^0.9.0",
    "drizzle-orm": "^0.29.4",
    "dotenv": "^16.4.5",
    "hono": "^4.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.20.14",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.2",
    "typescript": "^4.6.2"
  }
}
